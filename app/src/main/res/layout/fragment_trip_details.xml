<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_marginTop="10px"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".BudgetDetailsFragment">

<!-- TODO: Update blank fragment layout -->

<TextView
    android:id="@+id/txtDesc"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="5dp"
    android:textAlignment="viewStart"
    android:text="Description: "
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>
<EditText
    android:id="@+id/inptDesc"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="5dp"
    app:layout_constraintTop_toBottomOf="@+id/txtDesc"
    android:background="@drawable/editext_rounded"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>

<TextView
    android:id="@+id/txtLokacija"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="5dp"
    android:textAlignment="viewStart"
    android:text="Location: "
    app:layout_constraintTop_toBottomOf="@+id/inptDesc"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>
<EditText
    android:id="@+id/inptLokacija"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="5dp"
    app:layout_constraintTop_toBottomOf="@+id/txtLokacija"
    android:background="@drawable/editext_rounded"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/txtDatum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="5dp"
        android:textAlignment="viewStart"
        android:text="Date: "
        app:layout_constraintTop_toBottomOf="@+id/inptLokacija"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <EditText
        android:id="@+id/inptDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@+id/txtDatum"
        android:background="@drawable/editext_rounded"
        android:clickable="true"
        android:editable="false"
        android:focusable="false"
        android:longClickable="false"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

<TextView
    android:id="@+id/txtFriends"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="5dp"
    android:textAlignment="viewStart"
    android:text="Friends: "
    app:layout_constraintTop_toBottomOf="@+id/inptDate"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>

<com.example.kvtripplanner.MultiSelectionSpinner
    android:id="@+id/inptFriendsForTrip"
    android:layout_width="0dp"
    android:layout_height="90px"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/editext_rounded"

    app:layout_constraintTop_toBottomOf="@+id/txtFriends"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginBottom="15px"
        android:layout_marginRight="15px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDeleteTripButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_marginBottom="15px"
        android:layout_marginLeft="15px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:id="@+id/txtFriendsUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/leftBorder"
            app:layout_constraintRight_toLeftOf="@+id/rightBorder"
            />

        <View
            android:id="@+id/rightBorder"
            android:layout_width="2px"
            android:layout_height="0px"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="@+id/txtFriendsUsername"
            app:layout_constraintBottom_toBottomOf="@+id/txtFriendsUsername"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:id="@+id/leftBorder"
            android:layout_width="2px"
            android:layout_height="0px"
            android:background="@android:color/darker_gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtFriendsUsername"
            app:layout_constraintBottom_toBottomOf="@+id/txtFriendsUsername" />

        <View
            android:layout_width="0px"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/txtFriendsUsername"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>